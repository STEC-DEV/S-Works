
<div class="inputcol">
    <label class="label">
        @Label
    </label>
    <input 
        class="input"
        type="@ValueType" 
        placeholder="@Placeholder"
        
        />
</div>

@code {
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? ValueType { get; set; }
    [Parameter] public string? Value { get; set; }
   
    
}
