@using FamTec.Client.Pages.CommonComponents
@using FamTec.Shared.Client.DTO.Normal.Facility.Maintenance
@using FamTec.Shared.Client.DTO.Normal.Material.InOut


<table class="table">
    <thead class="thead">
        <tr class="thead-tr">
            <th class="th">
                <span>
                    자재코드
                </span>
            </th>
            <th class="th">
                <span>
                    자재명
                </span>
            </th>
            <th class="th">
                <span>
                    위치
                </span>
            </th>
            <th class="th">
                <span>
                    단가
                </span>
            </th>
            <th class="th">
                <span>
                    수량
                </span>
            </th>
            <th class="th">
                <span>
                    단위
                </span>
            </th>
            <th class="th">
                <span>
                    금액
                </span>
            </th>
            <th class="th">
                <span>

                </span>
            </th>
        </tr>
    </thead>
    <tbody class="tbody">
        @if(ListData?.Count == 0)
        {
            <tr>
                <td colspan="100" style="text-align:center;">
                    <Empty />
                </td>
            </tr>
        }
        @if (ListData == null)
        {
            <tr>
                <td colspan="100" style="text-align:center;">
                    <Loading />
                </td>
            </tr>
        }
        else
        {
            @foreach(UseMaterialDTO row in ListData)
            {
                <tr class="tr">
                    <td class="td">
                        @row.MaterialCode
                    </td>
                    <td class="td">
                        @row.MaterialName
                    </td>
                    <td class="td">
                        @row.RoomName
                    </td>
                    <td class="td">
                        @row.UnitPrice
                    </td>
                    <td class="td">
                        @row.Num
                    </td>
                    <td class="td">
                        @row.Unit
                    </td>
                    <td class="td">
                        @row.TotalPrice
                    </td>
                    <td class="td">
                        <input type="checkbox" />
                    </td>
                </tr>
            }
        }
        

    </tbody>
</table>

@code {
    // [Parameter] public List<InOutInventoryDTO>? ListData { get; set; }
    [Parameter] public List<UseMaterialDTO>? ListData { get; set; }

}
