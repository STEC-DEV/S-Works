@using FamTec.Shared.Client.DTO.Normal.Facility


<table>
    <thead>
        <tr>
            <th>
                <span>
                    작업 일자
                </span>
            </th>
            <th>
                <span>
                    수리 및 보수 이력
                </span>
            </th>
            <th>
                <span>
                    작업 구분
                </span>
            </th>
            <th>
                <span>
                    작업자
                </span>
            </th>
            <th>
                <span>
                    사용자재
                </span>
            </th>
            <th>
                <span>
                    소요비용
                </span>
            </th>
            <th>
                <span>

                </span>
            </th>
        </tr>
    </thead>
    <tbody>
        @if(ListData == null)
        {
            <p>
                ...Loading
            </p>
        }
        else
        {
            foreach(var row in ListData)
            {
                <tr>
                    <td>
                        @row.WorkDT
                    </td>
                    <td>
                        @row.Name
                    </td>
                    <td>
                        @row.Type
                    </td>
                    <td>
                        @row.Worker
                    </td>
                    <td>
                        @row.UseMaterial
                    </td>
                    <td>
                        @row.TotalPrice
                    </td>
                    <td>
                        <input type="checkbox" />
                    </td>

                </tr>
            }
        }

        
    </tbody>
</table>

@code {
    [Parameter] public List<FacilityHistoyuList> ListData { get; set; }
}
