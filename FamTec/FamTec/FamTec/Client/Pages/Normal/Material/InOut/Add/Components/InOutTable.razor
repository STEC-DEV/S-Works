@using FamTec.Client.Pages.CommonComponents
@using FamTec.Shared.Client.DTO.Normal.Material.InOut


<table class="table">
    <thead class="thead">
        <tr class="thead-tr">
            <th class="th">
                <span>
                    거래일
                </span>
            </th>
            <th class="th">
                <span>
                    위치
                </span>
            </th>
            <th class="th">
                <span>
                    자재코드
                </span>
            </th>
            <th class="th">
                <span>
                    자재명
                </span>
            </th>
            <th class="th">
                <span>
                    단위
                </span>
            </th>
            <th class="th">
                <span>
                    수량
                </span>
            </th>
            <th class="th">
                <span>
                    단가
                </span>
            </th>
            <th class="th">
                <span>
                    금액
                </span>
            </th>
            <th class="th">
                <span>
                    비고
                </span>
            </th>
            <th class="th">
                <span>

                </span>
            </th>
        </tr>
    </thead>
    <tbody class="tbody">
        @if(ListData?.Count == 0)
        {
            <tr>
                <td colspan="100" style="text-align:center;">
                    <Empty />
                </td>
            </tr>
        }
        else
        {
            @foreach (InOutInventoryDTO row in ListData)
            {
                <tr class="tr">
                    <td class="td">
                        @row.AddStore.InOutDate
                    </td>
                    <td class="td">
                        @row.AddStore.RoomName
                    </td>
                    <td class="td">
                        @row.MaterialCode
                    </td>
                    <td class="td">
                        @row.MaterialName
                    </td>
                    <td class="td">
                        @row.Unit
                    </td>
                    <td class="td">
                        @row.AddStore.Num
                    </td>
                    <td class="td">
                        @row.AddStore.UnitPrice
                    </td>
                    <td class="td">
                        @row.AddStore.TotalPrice
                    </td>
                    <td class="td">
                        @row.AddStore.Note
                    </td>
                    <td class="td">
                        <input type="checkbox" @onchange="(e)=>OnChecked(e,row)" />
                    </td>
                </tr>
            }
        }
        

    </tbody>
</table>

@code {
    [Parameter] public List<InOutInventoryDTO>? ListData { get; set; }
    [Parameter] public EventCallback<(bool, InOutInventoryDTO)> OnCheck{get;set;}


    private async void OnChecked(ChangeEventArgs e, InOutInventoryDTO row)
    {
        await OnCheck.InvokeAsync(((bool)e.Value, row));
    }
}
