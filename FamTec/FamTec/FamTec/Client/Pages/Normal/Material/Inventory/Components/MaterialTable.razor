@using FamTec.Client.Pages.CommonComponents
@using FamTec.Client.Pages.CommonComponents.IconButton
@using FamTec.Shared.Client.DTO.Normal.Location.Inventory


<table class="table">
    <thead class="thead">
        
        <tr class="th-tr">
            <th class="th" >
                <span>
                    품목 코드
                </span>
            </th>
            <th class="th" >
                <span>
                    품목명
                </span>
            </th>
                @if (@ListData.Count != 0)
                {
                @foreach (var th in ListData[0].RoomHistory)
                {
                    <th class="th">
                        <div class="row">
                            <div class="icon">
                                <LocationIcon />
                            </div>
                            <span class="sub-span">
                                @th.Name
                            </span>
                        </div>
                        
                    </th>
                }
                    }else{
                        <th class="th" >
                            <span>
                                창고
                            </span>
                        </th>
                }
            <th class="th" >
                <span>
                    총 재고수량
                </span>
            </th>
        </tr>
        
    </thead>
    <tbody class="tbody">
        @if (ListData.Count == 0)
        {
            <tr>
                <td colspan="100" style="text-align:center;">
                    @* <Empty /> *@
                </td>
            </tr>
        }
        else
        {
            @foreach (var row in ListData)
            {
                int sum = 0;
                
                <tr class="tr">
                    <td class="td">
                        @row.Code
                    </td>
                    <td class="td">
                        @row.Name
                    </td>
                    @foreach (var room in row.RoomHistory)
                    {
                        sum += room.Num.Value;
                        <td class="td">
                            @room.Num
                        </td>
                    }
                    <td class="td">
                        @sum.ToString("N0")
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>

@code {
    [Parameter] public List<MaterialHistoryDTO> ListData { get; set; }


    protected override async Task OnParametersSetAsync()
    {
        foreach(var i in ListData)
        {
            Console.WriteLine("gdgd"+i.Name);
        }
    }
}
